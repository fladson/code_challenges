<!DOCTYPE html>
<html>
  <head>
    <title>GithubRepoSearch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss/dist/tailwind.min.css" rel="stylesheet">
  </head>

  <body class="container mx-auto h-screen flex items-center flex-col mt-20">
    <a href="/" class="w-1/4 hover:cursor-pointer">
      <%= image_tag('logo.png') %>
    </a>
    <%= yield %>
  </body>
</html>
