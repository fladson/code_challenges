<section class="hero is-info is-medium is-bold">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-vcentered">
        <div class="column">
          <h1 class="title">
            <%= @playlist.name %>
          </h1>
          <h2 class="subtitle">
            from <%= @playlist.user.user_name %>
          </h2>
        </div>
        <div class="column is-narrow">
          <div class="box">
            <%= link_to "Back to #{@playlist.user.user_name} playlists", @playlist.user %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="hero is-dark">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Songs
      </h1>
      <h2 class="subtitle">
        <%= @playlist.songs.size %>
      </h2>
    </div>
  </div>
</section>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Interpret</th>
      <th>Album</th>
      <th>Track</th>
      <th>Year</th>
      <th>Genre</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>Title</th>
      <th>Interpret</th>
      <th>Album</th>
      <th>Track</th>
      <th>Year</th>
      <th>Genre</th>
    </tr>
  </tfoot>
  <tbody>
    <% @playlist.songs.each do |song| %>
      <tr>
        <td><strong><%= song.title %></strong></td>
        <td><%= song.interpret %></td>
        <td><%= song.album %></td>
        <td><%= song.track %></td>
        <td><%= song.year %></td>
        <td><%= song.genre %></td>
      </tr>
    <% end %>
  </tbody>
</table>
